    <main>
        <div class="register-container">
            <div class="register-header">
                <div class="business-icon">🚀</div>
                <h1 class="register-title">İşletme Kaydı</h1>
                <p class="register-subtitle">İşletmenizi kaydedin ve rezervasyon almaya başlayın</p>
            </div>

            <form class="register-form" id="registerForm">
                <!-- İşletme Bilgileri -->
                <div class="form-section">
                    <div class="section-title">
                        <span>🏢</span> İşletme Bilgileri
                    </div>
                    <div class="form-row">
                        <div class="form-group">
                            <span class="input-icon">🏪</span>
                            <input type="text" class="form-input" id="ad" placeholder="İşletme Adı" required>
                        </div>
                        <div class="form-group">
                            <span class="input-icon">📱</span>
                            <input type="tel" class="form-input" id="telefon" placeholder="Telefon Numarası" required>
                        </div>
                        <div class="form-group full-width">
                            <span class="input-icon">📍</span>
                            <input type="text" class="form-input" id="adres" placeholder="İşletme Adresi" required>
                        </div>
                        <div class="form-group">
                            <span class="input-icon">🏙️</span>
                            <select class="form-input" id="il" required>
                                <option value="">İl (Şehir) Seçin</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <span class="input-icon">🏘️</span>
                            <select class="form-input" id="ilce" required disabled>
                                <option value="">İlçe Seçin</option>
                            </select>
                        </div>
                    </div>
                </div>

                <!-- Hesap Bilgileri -->
                <div class="form-section">
                    <div class="section-title">
                        <span>👤</span> Hesap Bilgileri
                    </div>
                    <div class="form-row">
                        <div class="form-group">
                            <span class="input-icon">📧</span>
                            <input type="email" class="form-input" id="email" placeholder="E-posta Adresi" required>
                        </div>
                        <div class="form-group">
                            <span class="input-icon">🔒</span>
                            <input type="password" class="form-input" id="password" placeholder="Şifre" required>
                            <button type="button" class="password-toggle" onclick="togglePassword('password')">👁️</button>
                        </div>
                        <div class="form-group">
                            <span class="input-icon">🔒</span>
                            <input type="password" class="form-input" id="confirmPassword" placeholder="Şifre Tekrar" required>
                            <button type="button" class="password-toggle" onclick="togglePassword('confirmPassword')">👁️</button>
                        </div>
                    </div>
                </div>

                <!-- Doğrulama kodu alanı -->
                <div class="form-section" id="verifySection" style="display:none;">
                    <div class="section-title">
                        <span>✉️</span> E-posta Doğrulama
                    </div>
                    <div class="form-row">
                        <div class="form-group full-width">
                            <span class="input-icon">✉️</span>
                            <input type="text" class="form-input" id="verificationCode" placeholder="E-posta Doğrulama Kodu" maxlength="6">
                        </div>
                    </div>
                </div>
                <button type="button" class="register-btn" id="sendCodeBtn">
                    <div class="loading" id="loading"></div>
                    <span id="btnText">🚀 Doğrulama Kodu Gönder</span>
                </button>
                <button type="button" class="register-btn" id="verifyBtn" style="display:none;">
                    <div class="loading" id="loadingVerify"></div>
                    <span id="btnTextVerify">✔️ Kaydı Tamamla</span>
                </button>
            </form>

            <div id="registerSuccess" style="display:none; text-align:center; margin-top:2rem; color:green; font-weight:bold;"></div>
        </div>
    </main>

