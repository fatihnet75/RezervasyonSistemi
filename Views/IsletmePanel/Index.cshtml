            }

            .large-profile-pic input {
                position: absolute;
                width: 100%;
                height: 100%;
                opacity: 0;
                cursor: pointer;
            }

            .large-profile-pic img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                border-radius: 50%;
            }

        .business-info {
            margin-top: 1rem;
        }

        .business-name {
            font-size: 1.5rem;
            font-weight: 700;
            color: #333;
            margin-bottom: 0.5rem;
        }

        .business-details {
            color: #666;
            font-size: 0.9rem;
            line-height: 1.5;
        }

        /* Full Width Section */
        .full-width-section {
            grid-column: 1 / -1;
        }

        .tabs {
            display: flex;
            gap: 1rem;
            margin-bottom: 1.5rem;
            border-bottom: 2px solid rgba(255, 107, 107, 0.1);
        }

        .tab {
            padding: 0.8rem 1.5rem;
            background: none;
