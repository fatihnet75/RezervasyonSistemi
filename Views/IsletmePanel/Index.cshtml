        {
            padding-left: 1rem;
            padding-right: 1rem;
        }

        nav {
            padding: 1rem;
        }

        .user-profile {
            gap: 0.5rem;
        }

        .user-name {
            display: none;
        }

        }

        /* Empty states */
        .empty-state {
            text-align: center;
            padding: 2rem;
            color: #666;
        }

        .empty-state-icon {
            font-size: 3rem;
            margin-bottom: 1rem;
            opacity: 0.5;
        }
    </style>
</head>
<body>
    <header>
        <nav>
