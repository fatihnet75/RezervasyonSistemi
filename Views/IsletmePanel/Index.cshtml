            color: #666;
            font-weight: 600;
            cursor: pointer;
            border-bottom: 3px solid transparent;
            transition: all 0.3s ease;
        }

            .tab.active {
                color: #ff6b6b;
                border-bottom-color: #ff6b6b;
            }

            .tab:hover {
                color: #ff6b6b;
            }

        .tab-content {
            display: none;
        }

            .tab-content.active {
                display: block;
            }

        .reservation-grid {
            display: grid;
            gap: 1rem;
            max-height: 400px;
            overflow-y: auto;
        }

        /* Animations */
        keyframes fadeInUp {
            from

        {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        /* Responsive */
        medi (max-width: 1024px) {
            .dashboard-grid

        {
            grid-template-columns: 1fr;
        }

        .form-row {
            grid-template-columns: 1fr;
        }

        }

        media (max-width: 768px) {
